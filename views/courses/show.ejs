<h1 class="center">コースデータ
    <%= course.title %>
  </h1>
  
  <table class="table">
    <tr>
      <th>タイトル</th>
      <td>
        <%= course.title %>
      </td>
    </tr>
    <tr>
      <th>内容</th>
      <td>
        <%= course.description%>
      </td>
    </tr>
    <tr>
      <th>受講可能人数</th>
      <td>
        <%= course.maxStudents%>
      </td>
    </tr>
    <tr>
      <th>値段</th>
      <td>$
        <%= course.cost%>
      </td>
    </tr>
  </table>
  
  
  <div>
    <a class="button" href="<%=`/courses/${course._id}/edit`%>">
        コース内容の編集
    </a>
  </div>
  <div>
    <a class="button" href="<%= `/courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('コースデータを削除しますか?')" a>削除する</a>
  </div>
  <div>
    <a class="button" href="/courses">コース一覧へ</a>
  </div>