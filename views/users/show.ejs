<h1 class="center">ユーザー名
    <%= user.fullName %>
  </h1>
  
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= user.fullName %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= user.email%>
      </td>
    </tr>
    <tr>
      <th>Password</th>
      <td>********</td>
    </tr>
  </table>
  
  <% if(user.subscribedAccount !== undefined) { %>
  <h4 class="center"> ユーザー名: 
    <a href="<%=`/subscribers/${user.subscribedAccount}`%>">
      登録されています </a>.
  </h4>
  <% } %>
  <div class="center">
    <a class="button" href="<%=`/users/${user._id}/edit`%>">
      ユーザー名を編集する
    </a>
  </div>
  <div class="center">
    <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('ユーザーアカウントを削除しますか?')" a>削除</a>
  </div>
  <div class="center">
    <a class="button" href="/users">ユーザー一覧へ</a>
  </div>