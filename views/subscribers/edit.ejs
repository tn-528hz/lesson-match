<form action="<%= `/subscribers/${subscriber._id}/update?_method=PUT` %>" method="POST">
    <h2>ページを編集する</h2>
    <label for="inputName">名前</label>
    <input type="text" name="name" id="inputName" value="<%= subscriber.name %>" placeholder="名前" autofocus>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" value="<%= subscriber.email %>" placeholder="Email" required>
    <button type="submit">Save</button>
</form>